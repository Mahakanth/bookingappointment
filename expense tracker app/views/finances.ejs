<h1><%= pageTitle %></h1>

<!-- Form for adding a finance entry -->
<form action="/finances/add" method="POST">
  <input type="text" name="description" placeholder="Description" required>
  <input type="number" name="amount" placeholder="Amount" step="0.01" required>
  <select name="type">
    <option value="expense">Expense</option>
    <option value="income">Income</option>
  </select>
  <button type="submit">Add</button>
</form>

<!-- List of finance entries -->
<ul>
  <% expenses.forEach((expense) => { %>
    <li>
      <%= expense.description %> - $<%= expense.amount %>
      <a href="/finances/edit/<%= expense.id %>">Edit</a>
      <form action="/finances/delete" method="POST" style="display: inline-block;">
        <input type="hidden" name="financeId" value="<%= expense.id %>">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% }); %>
</ul>
